conky.config = {
    alignment = 'top_right',
    height = 1000,
    background = false,
    border_width = 1,
    cpu_avg_samples = 2,
    default_bar_height = 10,
    default_bar_width = 300,
    default_color = 'white',
    default_outline_color = 'white',
    default_shade_color = 'white',
    double_buffer = true,
    draw_borders = false,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    extra_newline = false,
    font = 'DejaVu Sans Mono:size=12',
    gap_x = 20,
    gap_y = 20,
    minimum_height = 5,
    minimum_width = 300,
    net_avg_samples = 2,
    no_buffers = true,
    out_to_console = false,
    out_to_ncurses = false,
    out_to_stderr = false,
    out_to_x = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    own_window_argb_value = 10,
    show_graph_range = false,
    show_graph_scale = false,
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    use_xft = true,
}

conky.text = [[
${image /home/murillo/Imagens/debian_logo.png -p 265,12 -s 80x80}
${color grey}Distro     : ${color}Debian
${color grey}Versão     : ${color}11 bullseye
${color grey}Arquitetura: ${color}$machine

${color grey}Kernel: ${color}$kernel
${color grey}Uptime: ${color}$uptime

${color grey}CPU Usage:$color
$cpu% $alignr${cpubar 4}
${color grey}RAM Usage:$color $mem/$memmax
$memperc% $alignr${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax
$swapperc% $alignr${swapbar 4}
${color grey}File System: $color${fs_used /}/${fs_size /}
$fs_used_perc% $alignr${fs_bar 4 /}
${color grey}Battery Charge:$color
${battery_percent BAT1}% $alignr${battery_bar 6,250 BAT1}

${color grey}Networking:
Up:$color ${upspeed wlo1} ${color grey} - Down:$color ${downspeed wlo1}
]]

